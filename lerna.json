{
  "version": "1.7.0",
  "command": {
    "version": {
      "message": "chore(release): %s",
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "exact": true,
      "forcePublish": true
    },
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish"
    }
  },
  "packages": ["packages/*"]
}
